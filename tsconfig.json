{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "rootDirs": ["src", "test-local"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@brink-sdk/*": ["src/*"],
      "@brink-sdk": ["src"]
    }
  },
  "include": [
    "src/**/*",
    "test-local/**/*",
    "test/test-fork/**/*"
  ],
  "files": [
    "hardhat.local.config.ts",
    "hardhat.fork.config.ts"
  ]
}
