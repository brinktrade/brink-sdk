{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
